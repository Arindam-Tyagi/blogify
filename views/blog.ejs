<!DOCTYPE html>
<html lang="en">
<head> <%- include('./partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
     <style> html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;

        .container {
    margin: 0 auto;
    padding: 0;
}
    }</style>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <h1> <%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %> " style="width: 100%; height: 300px; object-fit: cover;">
        <pre><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <h5>created by </h5>
        <img src="<%= blog.createdby.profileImage %> " width="50px">
        <h6><%= blog.createdby.fullname %></h6>
    </div>

    <div class="container mt-4">
        <form action="/blog/comment/<%= blog._id %>" method="post"> 
            <h1>Comments (<%= comments.length %>)</h1>

            <div class="mb-3"></div>
                
            <input type="text" class="form-control" id="exampleInputEmail1"  name="co" aria-describedby="emailHelp" placeholder="enter comment here ">
            
            <% if (locals.user) { %>
                <button class="btn btn-primary mt-2" type="submit">Submit</button>
            <% } %>
           <% if (!locals.user) { %>
            <h6 class="SignIntoComment mt-3"> Sign In to Comment</h6>
           <% } %>
            

              </div>
        </form>
        <div class="mt-4">
            <div style="
    padding-left: 57px;
">
            <% comments.forEach(comment => {   %>
                <div>
                    
                       
                        <img src="<%= comment.createdBy.profileImage %> " width="50px">
                        <%= comment.createdBy.fullname %>
                    
                    
                    <pre> <%= comment.content %> </pre>
                </div>
             
            <% }) %>
        </div>
    

    <%- include('./partials/script') %>  
</body>
</html>